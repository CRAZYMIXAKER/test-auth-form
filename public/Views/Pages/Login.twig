{% extends 'Layout/Main.twig' %}
{% block content %}
    <form id="login-form" action="/login" method="POST" class="form">
        <div class="form__item">
            <input
                    type="text"
                    name="name"
                    placeholder="Username"
                    required
                    min="4"
                    maxlength="32"
            >
        </div>
        <div class="form__item">
            <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                    minlength="4"
                    maxlength="64"
            >
        </div>
        <button class="btn form__submit" type="submit">Login</button>
    </form>
{% endblock %}